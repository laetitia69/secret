<% provide(:title, "Log in") %>

<% if current_user %>

<h1>Tu es d√©ja connect√© üòÅ</h1>

<% else %>

  <h1>Connexion</h1>

  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-group">
      	<div class="input-group mb-2">
          <div class="input-group-prepend">
            <div class="input-group-text">@</div>
          </div>
        		<%= f.email_field :email, class: 'form-control', placeholder: "Merci de rentrer votre email" %>
        </div>   <!-- fin input-group mb-2 -->

  		  <div class="form-group">
        	<%= f.password_field :password, class: 'form-control', placeholder: "Merci d'inscrire votre mot de passe" %>
    		</div>

        <div class="form-group">
          <%= f.label :remember_me, class: "checkbox inline" do %>
            <%= f.check_box :remember_me %>
            <span>Souviens-toi de moi</span>
          <% end %>

          <div class="form-group">
            <%= f.submit "Se connecter", class: "btn btn-primary" %>
          </div>
        
          <div class="form-group">
              <p>Nouveau moussaillon? <%= link_to "Inscris-toi!", signup_path %></p>
          </div>
        </div>  <!--  fin form-group -->
      </div>
    <% end %>  <!-- fin form-group -->
  </div>  <!-- fin col-md-6 col-md-offset-3 -->
<% end %>